<h2> User Profile </h2>
 
<table class="col-md-12">
    <tbody>
        <tr>
            <td><strong>Email : </strong> <%=  @user.email %></td>
            <td><strong>Name : </strong> <%=  @user.full_name %></td>
            <td><strong>Actions :</strong> 
                
                <% if current_user.not_friends_with?( @user.id)%>
                    <%= link_to 'Follow Friend ?',friendships_path(user:current_user,friend: @user),class:"btn btn-success",method: :post%>
                <%else%>
                <span class="badge text-bg-primary">
                        You are Already friends
                </span>
                <%end%>
            </td>
        </tr> 
    </tbody>
</table >
<div class="my-3">
<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<%else%>
 <p class="lead">This user is not currently tracking any Stocks</p>
<%end%>
</div>
                
